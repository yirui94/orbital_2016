<header class="navbar navbar-fixed-top" link = "black">
<div class = "container">
	<%= link_to "Artpraiser", root_path, id: "logo" %>
	<nav>
		<ul class = "navbar navbar-nav navbar-right">
			
			<li class="<%= 'active' if params[:controller] == 'static_pages' %>">
			<%= link_to "Home", root_path %></li>
			<li class="<%= 'active' if params[:controller] == 'users' %>">
			<%= link_to "Artists", users_path %></li>
			<li class="<%= 'active' if params[:controller] == 'microposts' %>">
			<%= link_to "Artworks", microposts_path %></li>

			<% if logged_in? %>
				<li class="dropdown">
					<a href='#' class = "dropdown-toggle" data-toggle="dropdown">Account<b class="caret"></b>
					</a>
					<ul class="dropdown-menu">
						<li><%= link_to "Profile", current_user %></li>
						<li><%= link_to "Settings", 
								edit_user_path(current_user) %></li>
						<li class="divider"></li>
						<li>
							<%= link_to "Logout", logout_path, method: 'delete' %>
						</li>
					</ul> 
			<% else %>
				<li><%= link_to "Login", login_path %></li>
			<% end %>
		</ul>
	</nav>
</div>
</header>