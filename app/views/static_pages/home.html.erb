
<% if logged_in? %>
	<div class="container-fluid">
		<aside class="col-md-5">
			<section class="user_info">
				<%= render 'shared/user_info' %>
			</section>
			<section class="stats">
				<%= render 'shared/stats' %>
			</section>
		</aside>

		<section class="micropost_form col-md-6 col-md-offset-1">
			<%= render 'shared/micropost_form' %>
		</section>
	</div>
	<br>
	<br>
	<div class="container-fluid">
		<header class="w3-container w3-teal">
			<h2><center>Recently posted artworks</center></h2>
		</header>
		<br><br>
	</div>

	<%= render 'shared/feed' %>
	




	
<% else %>
	<div class= "row text-center">
		<h1 class= 'welcome'>An online art gallery and marketplace</h1>
		<br>
		<div class = "col-sm-4">
			<span class="glyphicon glyphicon-user logo-small"></span>
			<h3>Browse artworks from local artists</h3>
		</div>
		<div class = "col-sm-4">
			<span class="glyphicon glyphicon-upload logo-small"></span>
			<h3>Upload your own artworks</h3>
		</div>
		<div class = "col-sm-4">
			<span class="glyphicon glyphicon-comment logo-small"></span>
			<h3>Let them know if you are interested in purchasing</h3>
		</div>
	</div>
	<div class= "row text-center">
		<br>
		<%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-primary inline-block center" %>
	</div>
<% end %>