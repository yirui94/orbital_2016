

<% if logged_in? %>
	<div class="container-fluid">
		<aside class="col-md-5">
			<section class="user_info">
				<%= render 'shared/user_info' %>
			</section>
			<section class="stats">
				<%= render 'shared/stats' %>
			</section>
		</aside>

		<section class="micropost_form col-md-6 col-md-offset-1">
			<%= render 'shared/micropost_form' %>
		</section>
	</div>
	<br>
	<br>
	<div class="container-fluid">
		<header class="w3-container w3-teal">
			<h2><center>Recently posted artworks</center></h2>
		</header>
		<br><br>
	</div>

	<%= render 'shared/feed' %>
	
<% else %>
	<div class= "row text-center">
		<div class="containter-fluid">
		<div class="home-bg">
			<br><br><br><br><br>
			<font color="white"><div class="w3-xxxlarge">Your online art gallery and marketplace</div></font>
		</div>
		</div>
		<br>
	</div>
	
	<%= render 'shared/top_artists' %>
	<br><br>
	<%= render 'shared/top_artworks' %>
	<br><br>
	<%= render 'shared/final_features' %>

<% end %>