<% provide(:title, @user.name) %>
<div class="row">
	<aside class="col-md-4">
		<section class="user_info">
			<h1>
				<%= gravatar_for @user %>
				<%= @user.name %>
			</h1>
			<p>
				<%= @user_detail.country %>
			</p>
			<p>
				Specialises in <%= @user_detail.medium %> Painting
			</p>
		</section>
		<section class='stats'>
			<%= render 'shared/stats' %>
		</section>
		<section class='buttons'>
			<% if logged_in? %>
					<%= render 'follow_form' %>
					<br>
					<%= link_to "Send Message", "#", class: "w3-btn w3-round-xlarge w3-green
								start-conversation", "data-sid" => current_user.id,
								"data-rip" => @user.id %>
			<% end %>
		</section>
	</aside>
	<div class="col-md-4">
		<% if @user.micropost.any? %>
			<h3>Artworks (<%= @user.micropost.count %>)</h3>
			<ol class= "microposts">
				<%= render @microposts %>
			</ol>
			<%= will_paginate @microposts %>
		<% end %>
	</div>
</div>
