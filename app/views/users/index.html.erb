<% provide(:title, 'All Artists') %>
<h1>Browse Artists</h1>

<%= render 'search_form' %>
<br>
<div class = 'row'>
	<%= will_paginate %>

	<ul class = "users">
		<% @users.each do |user| %>
			<li>
				<%= gravatar_for user, size: 50 %>
				<%= link_to user.name, user %>
				<% if logged_in? && current_user.admin? && !current_user?(user) %>
					| <%= link_to "delete", user, method: :delete,
													data: { confirm: "You sure?"} %>
				<% end %>
			</li>
		<% end %>
	</ul>

	<%= will_paginate %>
</div>